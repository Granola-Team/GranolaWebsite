---
import BlogLayout from '../../layouts/BlogLayout.astro'
export async function getStaticPaths({paginate}) {
    const allJobs = await Astro.glob('./*.mdx');
    const sortedJobs = (allJobs).sort((a,b) => new Date(b.date).valueOf() - new Date(a.date).valueOf());
    return paginate(sortedJobs, {pageSize: 4});
}
const {page, frontmatter} = Astro.props;
const title = "Blog"
import Blog from '../../components/Blog.astro'
const url = Astro.url;
---
<BlogLayout title={title}>
    <div class="px-12">
        <h1 class="mt-20 h-10 text-4xl sm:text-5xl text-white">
            <b><span class="text-logoOrange"><i>Granola's</i></span> Industry Perspectives</b>
        </h1>
        <p class="pt-6 sm:pt-3 sm:p-0 text-2xl text-white">Our blog about software development, DevOps, and leadership.</p>
        <h3 class="text-2xl sm:text-3xl text-white">Blog Posts:</h3>
        <ul class="h-[50vh] p-0">{page.data.map((jobs: {frontmatter: string; url: string | URL; title: unknown;}) => (
            <li class="flex flex-col flex-shrink p-4 list-none">
                <a href={jobs.url} class="py-4 px-8 rounded-lg text-logoOrange no-underline text-2xl
                bg-white hover:bg-gray-400 hover:transition-none hover:duration-75">{jobs.frontmatter.title} &rarr;
                <div class="px-2 pt-2 pb-2">
                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#Insight</span>
                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#Read More...</span>
                </div>
                </a>
            </li>
        ))}
        </ul>
        {url.pathname !== "/blog/" && <Blog url={url} />}
    </div>
</BlogLayout>