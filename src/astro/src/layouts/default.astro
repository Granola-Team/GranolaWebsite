---
import Heading from '../components/Heading.astro'
import Footer from '../components/Footer.astro'
import Nav from '../components/Nav.astro'
const frontmatter = Astro.props;
---

<html lang="en">
  <head>
      <Heading title={frontmatter.title} />
    <style>
      article {
        margin: 0 auto;
        max-width: 1200px;
        padding: 25px;
      }
    </style>
  </head>
<body class="bg-no-repeat bg-cover bg-center bg-fixed bg-logoDark text-white">
  <div class="min-h-full">
    <div class="pb-[15px] overflow-auto">
        <Nav />
        <article>
            <slot />
        </article>
    </div>
  </div>
  <footer class="relative clear-both h-[15px] -mt-[15px]">
    <Footer />
  </footer>
</body>
</html>
